#!/bin/sh
#
# Pre-commit hook for anshdavid.com website
# This hook runs linting, format checking, and build before allowing commits
#

echo "🚀 Running pre-commit checks..."

# Run linting
echo "📝 Running lint check..."
npm run lint
if [ $? -ne 0 ]; then
    echo "❌ Lint check failed. Please fix the issues above."
    exit 1
fi

# Run format check
echo "🎨 Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
    echo "❌ Code formatting check failed."
    echo "💡 Run 'npm run format' to auto-fix formatting issues."
    exit 1
fi

# Run build to ensure everything compiles
echo "🔨 Building project..."
npm run build
if [ $? -ne 0 ]; then
    echo "❌ Build failed. Please fix the issues above."
    exit 1
fi

echo "✅ All pre-commit checks passed!"
exit 0
