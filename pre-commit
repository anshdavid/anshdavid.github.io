#!/bin/sh
#
# Pre-commit hook for anshdavid.com website
# This hook runs linting, format checking, and build before allowing commits
#

echo "ğŸš€ Running pre-commit checks..."

# Run linting
echo "ğŸ“ Running lint check..."
npm run lint
if [ $? -ne 0 ]; then
    echo "âŒ Lint check failed. Please fix the issues above."
fi

# Run formatting check
echo "ğŸ¨ Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
    echo "âŒ Code formatting check found errors."
fi

# Run formatting
echo "ğŸ¨ Running code formatting..."
npm run format
npm run format:check
if [ $? -ne 0 ]; then
    echo "âŒ Code formatting failed."
    echo "ğŸ’¡ Run 'npm run format' to auto-fix formatting issues."
    exit 1
fi

# Run build to ensure everything compiles
echo "ğŸ”¨ Building project..."
npm run build
if [ $? -ne 0 ]; then
    echo "âŒ Build failed. Please fix the issues above."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
exit 0
